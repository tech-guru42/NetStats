<Page
    x:Class="NetworkStats.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NetworkStats"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="10,0,0,28">
            <TextBlock x:Name="ApplicationTitle" Text="Network Stats"/>
        </StackPanel>
        <Pivot x:Name="Tabs" Margin="7,19,13,1">
            <PivotItem Header="Network Usage" Margin="12,0">
                <StackPanel VerticalAlignment="Bottom" Margin="10,10,10,10">
                    <ListBox x:Name="ConnectionsList"/>
                    <TextBlock x:Name="Download" Text="0 kb"/>
                    <TextBlock x:Name="Upload" Text="0 kb"/>
                    <Charting:Chart x:Name="UsageChart" IsTapEnabled="False" VerticalAlignment="Top">
                        
                    </Charting:Chart>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button MinWidth="90" Margin="10" BorderBrush="Black" BorderThickness="1.5" x:Name="WLan">Wireless Lan</Button>
                        <Button MinWidth="90" Margin="10" BorderBrush="Black" BorderThickness="1.5" x:Name="Cellular">Mobile Data</Button>
                    </StackPanel>
                    <TextBlock HorizontalAlignment="Center" Text="Copyright G00328337" FontSize="10"/>
                </StackPanel>
                
            </PivotItem>
            <PivotItem Header="Wifi IP Manager">

            </PivotItem>
        </Pivot>

    </Grid>
</Page>
